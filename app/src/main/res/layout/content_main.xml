<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <!--顶部导航条-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/main_top_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:onClick="toggle_left_view"
            android:src="@drawable/ic_menu_gallery" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_top_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="title"
                android:textColor="#6ed56c"
                android:textSize="30sp" />

            <RadioGroup
                android:id="@+id/main_top_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">


                <RadioButton
                    android:id="@+id/main_top_radiogroup_r1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/main_top_title_radiogroup_selector1"
                    android:text="推荐"
                    android:textColor="@color/main_textcolor_selector"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/main_top_radiogroup_r2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/main_top_title_radiogroup_selector2"
                    android:text="发现"
                    android:textColor="@color/main_textcolor_selector"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>

        <ImageButton
            android:id="@+id/main_top_disk"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/disk"
            android:onClick="doMusic" />
    </LinearLayout>

    <!--用来装fragment碎片-->
    <LinearLayout
        android:id="@+id/main_fragment_viewgroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>


    <!--底部radioGroup-->

    <RadioGroup
        android:id="@+id/main_bottom_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_bottom_radiogroup_r1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="动态"
            android:textColor="@color/main_textcolor_selector" />

        <RadioButton
            android:id="@+id/main_bottom_radiogroup_r2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="频道"
            android:textColor="@color/main_textcolor_selector" />

        <RadioButton
            android:id="@+id/main_bottom_radiogroup_r3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="回声"
            android:textColor="@color/main_textcolor_selector" />

        <RadioButton
            android:id="@+id/main_bottom_radiogroup_r4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="名人"
            android:textColor="@color/main_textcolor_selector" />
    </RadioGroup>

</LinearLayout>
