<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    >
    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:id="@+id/fragment3_echo_hot_grid_day_hot_item_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        fresco:actualImageScaleType="centerCrop"
        />

    <TextView
        android:id="@+id/fragment3_echo_hot_grid_day_hot_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="19sp"
        android:text="title"
        />
    <TextView
        android:id="@+id/fragment3_echo_hot_grid_day_hot_item_channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="15sp"
        android:textColor="@color/appColorFontsGray"
        android:text="channel"
        />
</LinearLayout>
