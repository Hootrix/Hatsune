<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment3_echo_hot_grid_day_hot_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/hatsune_logo" />

    <TextView
        android:id="@+id/fragment3_echo_hot_grid_day_hot_item_order"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#f4f4f4"
        android:gravity="center"
        android:text=""
        android:textSize="40sp" />

    <TextView
        android:id="@+id/fragment3_echo_hot_grid_day_hot_item_title"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="title"
        android:textSize="19sp" />
